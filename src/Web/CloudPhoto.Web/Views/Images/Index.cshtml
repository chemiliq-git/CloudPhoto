@using CloudPhoto.Web.ViewModels.Images
@model IEnumerable<ListImageViewModel>

@{
    ViewData["Title"] = "Index";
}


<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form id="voteForm" method="post"></form>

<div class="row container-fluid" >
    <div id="side-search" class="col-md-2" style="display:none">
        @* Load filter bar *@
        @await Component.InvokeAsync("FilterBar")
    </div>
    <div id="hide-side-search" @*style="display:none"*@>
        <a href="#" onclick="onclickShowSearcBar()">
            <i class="fas fa-search"></i>
            Show search
        </a>
    </div>
    <div id="containerImages" class="col-md-12">
        <div id="partialView" class="row">
            <partial name="_ImageListPartial" model="@Model" data="@Model">
        </div>
    </div>
</div>

<div id="progress" class="text-center" style="display: none;">
    <div class="spinner-border a" role="status">
        <span class="sr-only">Loading...</span>
    </div>
</div>


@section Scripts {
    <script>

        
        var pageSize = 6;
        var pageIndex = 1;
        var pageCount = 0;

        var hasStartRequest = false;

        $(document).ready(
            function () {
                hookToCloseSideMenu();
                hookToClearAllFilter();

                configPage();
                configAutoCompleteTags();
                startSearchData();
            });

        $(window).scroll(function () {
            if ($(window).scrollTop() ==
                $(document).height() - $(window).height()) {
                if (!hasStartRequest) {
                    GetData();
                }
            }
        });

        function checkUncheckCategory(checkBox) {

            var strFilter = $.cookie("select-category-filter");
            var selectCategory = [];
            if (strFilter != null) {
                selectCategory = JSON.parse(strFilter);
            }

            if (checkBox.checked == true) {
                selectCategory.push(checkBox.id);
            }
            else {
                var filtered = selectCategory.filter(function (value, index, arr) {
                    return value != checkBox.id;
                });
                selectCategory = filtered;
            }
            $.cookie("select-category-filter", JSON.stringify(selectCategory), { path: "/Images" });
            startSearchData();
        }

        function startSearchData() {
            var partialView = $('#partialView');
            partialView.html("");
            pageIndex = 1;
            GetPageCount();
        }

        function configPage() {
            var showSearchBar = $.cookie("show-serch-bar");
            if (showSearchBar != null) {
                toggleMenu();
            }

            var strFilter = $.cookie("select-category-filter");
            if (strFilter) {
                showCheckedCategory(JSON.parse(strFilter));
            }

            var searchText = $.cookie("search-image-text");
            if (searchText) {
                $('#searchImageText').val(searchText);
            }
        }

        function showCheckedCategory(arraySelectCategories) {
            arraySelectCategories.forEach(element =>
                document.getElementById(element).checked = true);
        }

        function onclickShowSearcBar() {
            $.cookie("show-serch-bar", "true", { path: "/Images" });
            toggleMenu();
        }

        function hookToCloseSideMenu() {
            const node = document.getElementById("sideCloseBtn");
            node.addEventListener("click", function (event) {
                $.cookie("show-serch-bar", "false", { path: "/Images" });
                toggleMenu();
            });
        }

        function hookToClearAllFilter() {
            const node = document.getElementById("clearFilter");
            node.addEventListener("click", function (event) {
                $.cookie("select-category-filter", "", { path: "/Images" });
                $('#groupCheckBox input:checked').each(function () {
                    this.checked = false;
                });

                $.cookie("search-image-text", "", { path: "/Images" });
                $('#searchImageText').val(null);

                startSearchData();
            });
        }

        function toggleMenu() {
            var show = $.cookie("show-serch-bar");
            var searchBox = document.getElementById("side-search");
            if (show === "true") {
                searchBox.style.display = "block";
            } else {
                searchBox.style.display = "none";
            }

            var hideSearchBox = document.getElementById("hide-side-search");
            if (show === "false") {
                hideSearchBox.style.display = "block";
            } else {
                hideSearchBox.style.display = "none";
            }

            var containerImage = document.getElementById("containerImages");
            if (show === "false") {
                containerImage.classList.remove("col-md-10");
                containerImage.classList.add("col-md-12")
            } else {
                containerImage.classList.remove("col-md-12");
                containerImage.classList.add("col-md-10")
            }

        }

        function sendVote(imageId) {
            var token = $("#voteForm input[name=__RequestVerificationToken]").val();

            var formData = new FormData();
            formData.append("imageId", imageId);

            let style = document.getElementById(imageId).getAttribute('style');
            if (style.includes("red")) {
                formData.append("isLike", false);
            }
            else {
                formData.append("isLike", true);
            }

            $.ajax(
                {
                    url: "/api/votes",
                    data: formData,
                    processData: false,
                    contentType: false,
                    type: "POST",
                    headers: { 'X-CSRF-TOKEN': token },
                    complete: function () {
                        return false;
                    },
                    success: function (data) {
                        if (data.result == true) {
                            if (style.includes("red")) {
                                document.getElementById(imageId).setAttribute("style", "color:");
                            }
                            else {
                                document.getElementById(imageId).setAttribute("style", "color:red");
                            }
                        }
                    }
                }
            );

            return false;
        }

        function GetData() {
            hasStartRequest = true;
            

            if (pageIndex > pageCount) {
                return;
            }

            var token = $("#voteForm input[name=__RequestVerificationToken]").val();
            var filterCategoryIds = $.cookie("select-category-filter");

            var searchText = $('#searchImageText').val();
            $.cookie("search-image-text", searchText, { path: "/Images" });

            var formData = new FormData();
            formData.append("page", pageIndex);
            formData.append("perPage", pageSize);
            formData.append("searchText", searchText);
            if (filterCategoryIds != null) {
                formData.append("filterByCategories", filterCategoryIds);
            }

            $.ajax({
                url: '/images/GetSearchingData',
                data: formData,
                processData: false,
                contentType: false,
                type: "POST",
                headers: { 'X-CSRF-TOKEN': token },
                xhrFields: {
                    withCredentials: true
                },
                success: function (data) {
                    var partialView = $('#partialView');
                    if (data != '') {
                        partialView.append(data);
                        if (pageIndex == 1) {
                            $('html, body').animate({ scrollTop: 0 }, 'slow');
                        }
                        pageIndex++;
                    }
                    else {
                        partialView.html("");
                    }
                },
                beforeSend: function () {
                    $("#progress").show();
                },
                complete: function () {
                    $("#progress").hide();
                    hasStartRequest = false;
                },
                error: function () {
                    alert("Error while retrieving data!");
                }
            });
        }

        function GetPageCount() {
            var token = $("#voteForm input[name=__RequestVerificationToken]").val();
            var filterCategoryIds = $.cookie("select-category-filter");

            var searchText = $('#searchImageText').val();
            $.cookie("search-image-text", searchText, { path: "/Images" });
            

            var formData = new FormData();
            formData.append("itemPerPage", pageSize);
            formData.append("searchText", searchText);
            if (filterCategoryIds != null) {
                formData.append("filterByCategories", filterCategoryIds);
            }

            $.ajax({
                url: '/images/GetPageCount',
                data: formData,
                processData: false,
                contentType: false,
                type: "POST",
                headers: { 'X-CSRF-TOKEN': token },
                xhrFields: {
                    withCredentials: true
                },
                success: function (data) {
                    pageCount = data;
                    if (pageCount != "0") {
                        GetData();
                    }
                },
                error: function () {
                    alert("Error while retrieving data!");
                }
            });
        }

        function configAutoCompleteTags() {
            $('#searchImageText').keyup(function (event) {
                var token = $("#voteForm input[name=__RequestVerificationToken]").val();
                var filterCategoryIds = $.cookie("select-category-filter");

                var searchText = $('#searchImageText').val();
                $.cookie("search-image-text", searchText, { path: "/Images" });


                var formData = new FormData();
                formData.append("searchData", searchText);
                if (filterCategoryIds != null) {
                    formData.append("filterByCategories", filterCategoryIds);
                }

                $('#searchImageText').autocomplete(
                    {
                        scroll: true,
                        selectFirst: false,
                        autoFocus: false,
                        source: function (request, response) {
                            $.ajax(
                                {
                                    type: "POST",
                                    data: formData,
                                    url: "/tags/autocompletesearch",
                                    processData: false,
                                    contentType: false,
                                    headers: { 'X-CSRF-TOKEN': token },
                                    success: function (data) {
                                        response($.map(data, function (item) {
                                            return {
                                                label: item.name,
                                                val: item.id
                                            }
                                        }));
                                    },
                                    error: function (result) { }
                                });
                        },
                        minLength: 2,
                        select: function (event, ui) {
                            $('#searchImageText').val(ui.item.value);
                            event.returnValue = false;
                            event.cancel = true;

                            return false;
                        }
                    });
            });
        }

    </script>
}
